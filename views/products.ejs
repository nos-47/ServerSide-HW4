<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Product List</title>
  <style>
    body {
      font-family: sans-serif;
      padding: 20px;
    }
    ul {
      padding-left: 20px;
    }
    li {
      margin-bottom: 6px;
    }
  </style>
</head>
<body>
  <h2>Product List</h2>
  <% if (products.length > 0) { %>
    <ul>
      <% products.forEach(p => { %>
        <li>
          <strong><%= p.name %></strong> - $<%= p.price %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No products available.</p>
  <% } %>
</body>
</html>
